{
    "name": "movies_info_server",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/monarchinit/movies_info_server.git",
    "author": "Yaroslav Lototskyi <lotslav@gmail.com>",
    "scripts": {
        "start": "ts-node ./src/start.ts",
        "build": "rm -rf ./dist && ./node_modules/.bin/tsc",
        "start:watch": "nodemon",
        "startHerocu": "yarn install && yarn build && node dist/start.js"
    },
    "license": "MIT",
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "joi": "^17.2.1",
        "mongoose": "^5.10.2"
    },
    "devDependencies": {
        "@types/node": "^14.6.2",
        "nodemon": "^2.0.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "yarn start",
        "ext": "ts"
    }
}
